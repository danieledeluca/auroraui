{
    "name": "auroraui",
    "description": "Lightweight HTML, CSS, and JavaScript framework.",
    "version": "1.0.2",
    "type": "module",
    "author": "Daniele De Luca",
    "license": "MIT",
    "browserslist": [
        "last 2 versions"
    ],
    "keywords": [
        "css",
        "sass",
        "responsive",
        "front-end",
        "framework",
        "web"
    ],
    "homepage": "https://danieledeluca.github.io/auroraui/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/danieledeluca/auroraui.git"
    },
    "bugs": {
        "url": "https://github.com/danieledeluca/auroraui/issues"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "lint": "npm run lint:js && npm run lint:css",
        "lint:js": "eslint 'src/js/**/*.js' --config .eslintrc.json --fix",
        "lint:css": "stylelint 'src/scss/**/*.scss' --config .stylelintrc --fix",
        "format": "npm run format:js && npm run format:css",
        "format:js": "prettier 'src/js/**/*.js' --config .prettierrc --write --ignore-path .gitignore",
        "format:css": "prettier 'src/scss/**/*.scss' --config .prettierrc --write --ignore-path .gitignore"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.13",
        "eslint": "^8.31.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "sass": "^1.57.1",
        "stylelint": "^14.16.1",
        "stylelint-config-prettier-scss": "^0.0.1",
        "stylelint-config-sass-guidelines": "^9.0.1",
        "stylelint-prettier": "^2.0.0",
        "vite": "^4.0.0"
    },
    "files": [
        "dist/*",
        "src/*"
    ],
    "main": "./dist/auroraui.umd.cjs",
    "module": "./dist/auroraui.js",
    "exports": {
        ".": {
            "import": "./dist/auroraui.js",
            "require": "./dist/auroraui.umd.cjs",
            "default": "./dist/auroraui.js"
        },
        "./css": "./dist/auroraui.min.css",
        "./scss": "./src/scss/auroraui.scss",
        "./scss/": "./src/scss/"
    },
    "dependencies": {
        "aurora-icons": "^1.0.0"
    }
}
