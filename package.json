{
    "name": "@sparkleui/sparkle",
    "description": "Lightweight HTML, CSS and JavaScript framework.",
    "version": "1.0.2",
    "type": "module",
    "author": "Daniele De Luca",
    "license": "MIT",
    "browserslist": [
        "last 2 versions"
    ],
    "keywords": [
        "sparkle-ui",
        "sparkle",
        "css",
        "sass",
        "responsive",
        "front-end",
        "framework",
        "web"
    ],
    "homepage": "https://danieledeluca.github.io/sparkle/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/danieledeluca/sparkle.git"
    },
    "bugs": {
        "url": "https://github.com/danieledeluca/sparkle/issues"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "lint": "npm run lint:js && npm run lint:css",
        "lint:js": "eslint 'src/js/**/*.js' --config .eslintrc && prettier 'src/js/**/*.js' --config .prettierrc --ignore-path .gitignore --check",
        "lint:css": "stylelint 'src/scss/**/*.scss' --config .stylelintrc && prettier 'src/scss/**/*.scss' --config .prettierrc --ignore-path .gitignore --check",
        "format": "npm run format:js && npm run format:css",
        "format:js": "eslint 'src/js/**/*.js' --config .eslintrc --fix && prettier 'src/js/**/*.js' --config .prettierrc --ignore-path .gitignore --write",
        "format:css": "stylelint 'src/scss/**/*.scss' --config .stylelintrc --fix && prettier 'src/scss/**/*.scss' --config .prettierrc --ignore-path .gitignore --write",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.16",
        "eslint": "^8.55.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-prettier": "^5.0.1",
        "prettier": "^3.1.1",
        "sass": "^1.69.5",
        "stylelint": "^16.0.2",
        "stylelint-config-standard-scss": "^12.0.0",
        "stylelint-order": "^6.0.4",
        "stylelint-prettier": "^5.0.0",
        "vite": "^5.0.8",
        "vitepress": "^1.0.0-rc.31"
    },
    "files": [
        "dist/*",
        "src/*"
    ],
    "main": "./dist/sparkle.umd.cjs",
    "module": "./dist/sparkle.js",
    "exports": {
        ".": {
            "import": "./dist/sparkle.js",
            "require": "./dist/sparkle.umd.cjs",
            "default": "./dist/sparkle.js"
        },
        "./css": "./dist/sparkle.min.css",
        "./scss": "./src/scss/sparkle.scss",
        "./scss/": "./src/scss/"
    },
    "dependencies": {
        "@sparkleui/sparkle-icons": "^1.0.3"
    }
}
