{
    "name": "@sparkleui/sparkle",
    "description": "Lightweight HTML, CSS and JavaScript framework.",
    "version": "1.0.2",
    "type": "module",
    "author": "Daniele De Luca",
    "license": "MIT",
    "browserslist": [
        "last 2 versions"
    ],
    "keywords": [
        "sparkle-ui",
        "sparkle",
        "css",
        "sass",
        "responsive",
        "front-end",
        "framework",
        "web"
    ],
    "homepage": "https://danieledeluca.github.io/sparkle/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/danieledeluca/sparkle.git"
    },
    "bugs": {
        "url": "https://github.com/danieledeluca/sparkle/issues"
    },
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "lint": "npm run lint:js && npm run lint:css",
        "lint:js": "eslint 'src/js/**/*.js' --config .eslintrc.json --fix",
        "lint:css": "stylelint 'src/scss/**/*.scss' --config .stylelintrc --fix",
        "format": "npm run format:js && npm run format:css",
        "format:js": "prettier 'src/js/**/*.js' --config .prettierrc --write --ignore-path .gitignore",
        "format:css": "prettier 'src/scss/**/*.scss' --config .prettierrc --write --ignore-path .gitignore",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.13",
        "eslint": "^8.31.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "sass": "^1.57.1",
        "stylelint": "^14.16.1",
        "stylelint-config-prettier-scss": "^0.0.1",
        "stylelint-config-sass-guidelines": "^9.0.1",
        "stylelint-prettier": "^2.0.0",
        "vite": "^4.0.0",
        "vitepress": "^1.0.0-rc.31"
    },
    "files": [
        "dist/*",
        "src/*"
    ],
    "main": "./dist/sparkle.umd.cjs",
    "module": "./dist/sparkle.js",
    "exports": {
        ".": {
            "import": "./dist/sparkle.js",
            "require": "./dist/sparkle.umd.cjs",
            "default": "./dist/sparkle.js"
        },
        "./css": "./dist/sparkle.min.css",
        "./scss": "./src/scss/sparkle.scss",
        "./scss/": "./src/scss/"
    },
    "dependencies": {
        "@sparkleui/sparkle-icons": "^1.0.1"
    }
}
